<button onclick={{action 'previous' target=slides}} disabled={{not slides.hasPreviousSlide}}>Prev</button>
<button onclick={{action 'next' target=slides}} disabled={{not slides.hasNextSlide}}>Next</button>

Slide {{slides.currentSlideNumber}} of {{slides.slideCount}}

<hr>

<div class="slide">
  {{outlet}}
</div>

<hr>

<ul>
  <li>slides.router.currentRouteName: {{slides.router.currentRouteName}}</li>
  <li>slides.currentSlideRouteName: {{slides.currentSlideRouteName}}</li>
  <li>slides.slideCount: {{slides.slideCount}}</li>
  <li>currentSlideIndex: {{slides.currentSlideIndex}}</li>
  <li>previousSlideIndex: {{slides.previousSlideIndex}}</li>
  <li>hasPreviousSlide: {{slides.hasPreviousSlide}}</li>
  <li>hasNextSlide: {{slides.hasNextSlide}}</li>
  <li>nextSlideIndex: {{slides.nextSlideIndex}}</li>
  <li>previousSlideRouteName: {{slides.previousSlideRouteName}}</li>
  <li>nextSlideRouteName: {{slides.nextSlideRouteName}}</li>
</ul>


<ul>
  {{#each slides.slideRouteNames as |routeName|}}
    <li>{{link-to routeName routeName}}</li>
  {{/each}}
</ul>
<hr>
